    <script>
      function validate() {
        //collect form data in JavaScript variables
        var name = document.form1.name.value;
        var mobile = document.form1.phone.value;
        var email = document.form1.email.value;
        var pw = document.form1.pswd.value;
        var pw1 = document.form1.pswd1.value;
        var pw2 = document.form1.pswd2.value;
        if (pw == "") {
          document.getElementById("error").innerHTML =
            "*Please enter your current password to authorize the changes";
          return false;
        }

        // if( !pw1 && !pw2 )
        if (
          (pw1 == "" || pw1 == undefined) &&
          (pw2 == "" || pw2 == undefined)
        ) {
        } else {
          //check empty password field
          if (pw1 == "") {
            document.getElementById("error").innerHTML =
              "*Please enter the new password!";
            return false;
          }

          //check empty confirm password field
          if (pw2 == "") {
            document.getElementById("error").innerHTML =
              "*Please enter confirm password!";
            return false;
          }

          //minimum password length validation
          if (pw1.length < 8) {
            document.getElementById("error").innerHTML =
              "*Password length must be atleast 8 characters";
            return false;
          }

          //maximum length of password validation
          if (pw1.length > 15) {
            document.getElementById("error").innerHTML =
              "*Password length must not exceed 15 characters";
            return false;
          }

          if (pw1 != pw2) {
            document.getElementById("error").innerHTML =
              "*Passwords are not same";
            return false;
          } else {
            alert("Your password created successfully");
          }
        }

        if (!validateForm(name, mobile, email)) {
          return false;
        } else {
          alert("Your profile updated successfully!");
        }
      }

      // Form Validation
      function validateForm(name, mobile, email) {
        if (name == "" || name == "undefined") {
          document.getElementById("name").value = "<%= data.name %>";
        } //character data validation
        else if (!isNaN(name)) {
          document.getElementById("error").innerHTML =
            "*Only characters are allowed";
          return false;
        } else if (name.length <= 2) {
          document.getElementById("error").innerHTML =
            "*Name lenght must be atlease 3 characters!";
          return false;
        }

        if (mobile == "" || mobile == "undefined") {
          document.getElementById("phone").value = "<%= data.phone %>";
        } else if (!mobile.match(/^\d{10}$/)) {
          document.getElementById("error").innerHTML =
            "*Not a valid Phone Number";
          return false;
        }

        if (email == "" || email == "undefined") {
          document.getElementById("email").value = "<%= data.email %>";
        } else if (!email.match(/\S+@\S+\.\S+/)) {
          document.getElementById("error").innerHTML =
            "*Not a valid Email Address!";
          return false;
        }

        return true;
      }
    </script>
    <script>
      $(document).ready(function() {
        let imagesPreview = function(input, placeToInsertImagePreview) {
          if (input.files) {
              let reader = new FileReader();
              reader.onload = function(event) {
                $($.parseHTML("<img>"))
                  .attr("src", event.target.result)
                  .appendTo(placeToInsertImagePreview);
              };
              reader.readAsDataURL(input.files[0]);
          }
        };
        $("#input-files").on("change", function() {
          imagesPreview(this, "div.wrapper");
        });
      });
    </script>
    <script>
      function imgValidate() {
        if (!window.FileReader) { // This is VERY unlikely, browser support is near-universal
            document.getElementById("error1").innerHTML =
              "The file API isn't supported on this browser yet.";
            return false;
        }

        var input = document.getElementById('input-files');
        if (!input.files) { // This is VERY unlikely, browser support is near-universal
            console.error();
            document.getElementById("error1").innerHTML =
              "This browser doesn't seem to support the `files` property of file inputs.";
            return false;
        }

        if (!input.files[0]) {
          document.getElementById("error1").innerHTML =
            "Please select a file before 'Submit'";
            return false;
        }

        var oFile = input.files[0];
        if( !oFile.type.includes('image') ) // Allowed Extensions
        {
          document.getElementById("error1").innerHTML =
            "Allowed Extensions are : *.jpeg,*.jpg,*.png";
            return false;
        }
        
        if (oFile.size > 102400 ) // 100 KiB for bytes.
        {
          document.getElementById("error1").innerHTML =
            "File size must be under 100KiB!";
            return false;
        }

        return true;
      }
    </script>
