        outline: none;
        color: transparent;
        width: 100%;
        box-sizing: border-box;
        padding: 10px 60px;
        cursor: pointer;
        transition: 0.5s;
        background: rgba(0, 0, 0, 0.5);
        opacity: 0;
      }

      .my_file::-webkit-file-upload-button {
        visibility: hidden;
      }

      .my_file::before {
        content: "\f030";
        font-family: fontAwesome;
        color: #fff;
        display: inline-block;
        -webkit-user-select: none;
      }

      .my_file::after {
