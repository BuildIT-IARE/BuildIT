<form method="POST" autocomplete="off" name="google-sheet" style="display: none;">
  <input type="text" name="date" id="date">
  <input type="text" name="month" id="month">
  <input type="text" name="time" id="time">
  <input type="text" name="username" id="username">
  <input type="text" id="ip" name="ip" style="display: none" />
</form>
<script>


  const countApiKey = "<%= countApiKey %>"
  const googleSheetsApi = "<%= googleSheetsApi %>"
  var formdate=document.getElementById("date")
  var formmonth=document.getElementById("month")
  var formtime=document.getElementById("time")
  var formuser=document.getElementById("username")
  var dateObj = new Date();
  var month = dateObj.getMonth() + 1; //months from 1-12
  var day = dateObj.getDate();
  var year = dateObj.getFullYear();
  var time=dateObj.getHours()+":"+dateObj.getMinutes()+":"+dateObj.getSeconds()
  newdate = year + "/" + month + "/" + day;
  formdate.value=newdate
  formmonth.value=month+"/"+dateObj.getFullYear()
  formtime.value=time
  formuser.value="<%=imgUsername%>"
  const countEl = document.getElementById("counter");
  function counters() {
    //this api call increments website hits
    fetch("https://api.countapi.xyz/get/" + countApiKey)
      .then((res) => res.json())
      .then((res) => {
        countEl.innerHTML = "<span>Daily Views</span>" + res.value;
        document.getElementById("weekly").innerHTML =
        "<span>Weekly Views</span>" + (Number('<%= weeklyCount %>') + res.value);
        document.getElementById("total").innerHTML =
        "<span>Total Views</span>" + (Number('<%= totalCount %>') + res.value);
      });
  }
  counters();
  fetch("https://api.ipify.org/?format=json")
.then(results=>results.json())
.then(data=>{
  document.getElementById("ip").value=data.ip
  const scriptURL ="https://script.google.com/macros/s/"+googleSheetsApi;
  const form = document.forms["google-sheet"];
  fetch(scriptURL, { method: "POST", body: new FormData(form) })
    .then()
    .catch((error) => console.error("Error!", error.message));
})

</script>

