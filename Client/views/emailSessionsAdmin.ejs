<!DOCTYPE html>
<html>
  <head>
    <title>Manage Email Questions</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="../css/navadmin.css" />

    <link rel="icon" type="image/png" href="../../images/logo-backup2.png" />

    <!-- Bootstrap -->
    <link
      rel="stylesheet"
      href="../plugins/bootstrap-5/css/bootstrap.min.css"
    />
    <!-- <link rel="stylesheet" href="/plugins/bootstrap/bootstrap.min.css" /> -->

    <!-- Main Stylesheet -->
    <link href="/css/style.css" rel="stylesheet" />
    <link href="/datatables/dataTables.min.css" rel="stylesheet" />

    <style>
      /* Three columns side by side */
      .column {
        float: left;
        width: 25%;
        margin-bottom: 16px;
        padding: 0 8px;
      }

      /* Display the columns below each other instead of side by side on small screens */
      @media screen and (max-width: 650px) {
        .column {
          width: 100%;
          display: block;
        }
      }

      /* Add some shadows to create a card effect */
      .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        width: 100%;
        height: 100%;
      }

      /* Some left and right padding inside the container */
      .container {
        padding: 0 96px;
      }

      /* Clear floats */
      .container::after,
      .row::after {
        content: "";
        clear: both;
        display: table;
      }

      .title {
        font-size: 1.3rem;
        font-weight: bold;
        margin-bottom: 2px;
      }

      .dataTables_filter {
        float: right;
      }

      #leaderboard {
        text-align: center;
        vertical-align: top;
      }

      th,
      td {
        width: 120px !important;
        height: 20px;
      }

      .dropdown {
        margin-left: -2.5vw;
        width: inherit;
      }

      #submit {
        display: none;
      }

      .btn {
        font-family: inherit;
        font-size: inherit;
        font-weight: inherit;
      }
    </style>

    <style>
      html {
        -ms-text-size-adjust: 100%;
        -webkit-text-size-adjust: 100%;
      }

      body {
        background: #41228e;
        overflow-x: auto;
      }

      body {
        line-height: 1.2;
        font-family: "Roboto", sans-serif;
        -webkit-font-smoothing: antialiased;
        font-size: 15px;
        color: #4c4c4c;
      }

      .page-title {
        padding-top: 0;
        padding-bottom: 100px;
      }

      th {
        display: table-cell;
        vertical-align: inherit;
        font-weight: bold;
        text-align: -internal-center;
      }

      td,
      th {
        line-height: 1.2;
        white-space: nowrap;
      }

      @media (min-width: 568px) {
        th,
        td {
          word-break: normal;
        }
      }

      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        color: #000;
        font-family: "Playfair Display", serif;
        line-height: 1.2;
      }

      label {
        white-space: normal;
      }

      select {
        width: -webkit-fill-available;
      }

      input[type="search"] {
        display: block;
      }
    </style>
  </head>

  <body>
    <%- include ("../views/partials/adminpanel") -%>
    <br /><br /><br /><br /><br />
    <br /><br /><br /><br /><br />
    <section class="page-title bg-white position-relative" style="height: 8vh">
      <div class="container">
        <div class="row">
          <div class="col-12 text-center">
            <h3>Email Statements</h3>
          </div>
        </div>
      </div>
    </section>
    <section class="section py-5 bg-white" style="padding-top: 1rem">
      <div
        class="container d-flex flex-column align-items-baseline table-responsive"
      >
        <table
          id="leaderboard"
          class="table table-striped table-bordered dt-center"
          style="width: 100%"
        >
          <thead>
            <tr>
              <!-- headers -->
              <th>No</th>
              <th>Session ID</th>
              <th>Session Name</th>
              <th>Faculty Name</th>
              <th>Faculty ID</th>
              <th>Session Created Date</th>
              <th>Session Start Day</th>
              <th>Session End Day</th>
              <th>Session Start Time</th>
              <th>Session End Time</th>
              <th>Statements</th>
            </tr>
          </thead>
          <tbody>
            <% for (let i=0; i < data.length; i++ ){ %>
            <tr>
              <td><%= i+1 %></td>
              <td><%= data[i].emailId %></td>
              <td><%= data[i].emailName %></td>
              <td><%= data[i].emailFaculty %></td>
              <td><%= data[i].facultyId %></td>
              <td><%= data[i].emailDate %></td>
              <td><%= data[i].emailStartDay %></td>
              <td><%= data[i].emailEndDay %></td>
              <td><%= data[i].emailStartTime %></td>
              <td><%= data[i].emailEndTime %></td>
              <td>
                <a
                  href="<%= url.clientUrl %>/admin/emailSessionQuestions/<%= data[i].emailId %>"
                  >View Statements</a
                >
              </td>
            </tr>
            <% } %>
          </tbody>
          <tfoot>
            <tr>
              <!-- headers -->
              <th>No</th>
              <th>Session ID</th>
              <th>Session Name</th>
              <th>Faculty Name</th>
              <th>Faculty ID</th>
              <th>Session Date</th>
              <th>Session Start Day</th>
              <th>Session End Day</th>
              <th>Session Start Time</th>
              <th>Session End Time</th>
              <th>Statements</th>
            </tr>
          </tfoot>
        </table>
      </div>
    </section>
    <br />
    <br />
    <script src="/adminjs/classie.js"></script>
    <script src="/adminjs/gnmenu.js"></script>
    <script>
      new gnMenu(document.getElementById("gn-menu"));
      document.getElementById("token").value = "<%= token %>";
    </script>

    <!-- jQuery -->
    <script src="/plugins/jQuery/jquery.min.js"></script>
    <script type="text/javascript" src="/datatables/datatables.min.js"></script>

    <!-- Main Script -->
    <script src="/js/script.js"></script>

    <script>
      $(document).ready(function () {
        $("#leaderboard").DataTable();
      });
    </script>
  </body>
</html>
