<!DOCTYPE html>
<html>
  <head>
    <title>Resumes</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="../css/navadmin.css" />

    <link rel="icon" type="image/png" href="../../images/logo-backup2.png" />

    <!-- Bootstrap -->
    <link rel="stylesheet" href="/plugins/bootstrap/bootstrap.min.css" />

    <!-- Main Stylesheet -->
    <link href="/css/style.css" rel="stylesheet" />
    <link href="/datatables/dataTables.min.css" rel="stylesheet" />

    <style>
      /* Three columns side by side */
      .part2{
        width: 90%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        margin-left: 5%;
      }
      .part2 form{
        width: 300px;
      }
      #resumedel
      {
        padding: 0;
        background: none;
        border: none;
        border-radius: 0;
        outline: none;
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
        box-shadow: none;
        color: red;
      }
      #resumedel a{
        text-decoration: none;

      }
      #resumedel:hover{
        color: rgb(176, 0, 0);
      }
      .column {
        float: left;
        width: 25%;
        margin-bottom: 16px;
        padding: 0 8px;
      }

      /* Display the columns below each other instead of side by side on small screens */
      @media screen and (max-width: 650px) {
        .column {
          width: 100%;
          display: block;
        }
      }

      /* Add some shadows to create a card effect */
      .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        width: 100%;
        height: 100%;
      }

      /* Some left and right padding inside the container */
      .container {
        padding: 0 16px;
      }

      /* Clear floats */
      .container::after,
      .row::after {
        content: "";
        clear: both;
        display: table;
      }

      .title {
        font-size: 1.3rem;
        font-weight: bold;
        margin-bottom: 2px;
      }

      .dataTables_filter {
        float: right;
      }

      #leaderboard {
        text-align: center;
        vertical-align: top;
      }

      th,
      td {
        width: 120px !important;
      }

      .dropdown {
        margin-left: -2.5vw;
        width: inherit;
      }

      #submit {
        display: none;
      }

      .btn {
        font-family: inherit;
        font-size: inherit;
        font-weight: inherit;
      }
    </style>

    <style>
      html {
        -ms-text-size-adjust: 100%;
        -webkit-text-size-adjust: 100%;
      }

      body {
        background: #41228e;
        overflow-x: auto;
      }

      body {
        line-height: 1.2;
        font-family: "Roboto", sans-serif;
        -webkit-font-smoothing: antialiased;
        font-size: 15px;
        color: #4c4c4c;
      }

      .page-title {
        padding-top: 0;
        padding-bottom: 100px;
      }

      th {
        display: table-cell;
        vertical-align: inherit;
        font-weight: bold;
        text-align: -internal-center;
      }

      td,
      th {
        line-height: 1.2;
        white-space: nowrap;
      }

      @media (min-width: 568px) {
        th,
        td {
          word-break: normal;
        }
      }

      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        color: #000;
        font-family: "Playfair Display", serif;
        line-height: 1.2;
      }

      label {
        white-space: normal;
      }

      select {
        width: -webkit-fill-available;
      }

      input[type="search"] {
        display: block;
      }
    </style>
  </head>

  <body>
    <% include ../views/partials/adminpanel %>
    <br /><br /><br /><br /><br />
    <!-- page title -->
    <section class="page-title bg-white position-relative" style="height: 8vh">
      <div class="container">
        <div class="row">
          <div class="col-12 text-center">
            <h3>Resumes</h3>
          </div>
        </div>
      </div>
    </section>

    <section class="section py-5 bg-white" style="padding-top: 1rem">
      <div class="container d-flex flex-column align-items-center">
        <table
          id="leaderboard"
          class="table table-striped table-bordered dt-center"
          style="width: 100%"
        >
          <thead>
            <tr>
              <!-- headers -->
              <th>No</th>
              <th>Username</th>
              <th>Name</th>
              <th>Branch</th>
              <th>View</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>
            <% for (let i=0; i < data.length; i++ ){ %> <% if (!data[i].admin){
            %>
            <tr style="background: <%= data[i].color %>">
              <td><%= i+1 %></td>
              <td><%= data[i].resumeId %></td>
              <td><%= data[i].firstName  %> <%= data[i].lastName  %></td>
              <td><%= data[i].branch %></td>
              <td>
                <a
                  href="<%= data[i].url %>/resume/<%= data[i].resumeId %>"
                  target="_blank"
                  >View Resume</a
                >
              </td>
              <td>
                <form id="resumedel" action="<%= data[i].url %>/resume/<%= data[i].resumeId %>" method="post">
                  <a onclick="document.getElementById('resumedel').submit();">Delete Resume</a>
                </form>
              </td>
            </tr>
            <% } %> <% } %>
          </tbody>
          <tfoot>
            <tr>
              <!-- headers -->
              <th>No</th>
              <th>Username</th>
              <th>Name</th>
              <th>Branch</th>
              <th>View</th>
              <th>Delete</th>
            </tr>
          </tfoot>
        </table>
      </div>
      <div class="part2">
        <br>
        <br>
      <h3>Print all resumes Branch-wise</h3>
      <br>
      <form action="/getAllResumes" method="POST">
        <select name="Branch" id="" required>
          <option value="05">CSE</option>
          <option value="12">IT</option>
          <option value="04">ECE</option>
          <option value="01">CIV</option>
          <option value="02">EEE</option>
          <option value="03">ME</option>
          <option value="21">AE</option>
          <option value="66">CSE AIML</option>
          <option value="67">CSE DS</option>
          <option value="62">CSE CS</option>
          <option value="33">CSE IT</option>
        </select>
        <br>
        <br>
        <select name="Year" id="" required>
          <option value="18">18 series</option>
          <option value="19">19 series</option>
          <option value="20">20 series</option>
          <option value="21">21 series</option>
        </select>
        <input type="submit" value="Submit">
      </form>
    </div>
    </section>
    <br />
    <br />
    <script src="/adminjs/classie.js"></script>
    <script src="/adminjs/gnmenu.js"></script>
    <script>
      new gnMenu(document.getElementById("gn-menu"));
    </script>
    <script>
      function downloadCSV(csv, filename) {
        var csvFile;
        var downloadLink;

        csvFile = new Blob([csv], { type: "text/csv" });

        downloadLink = document.createElement("a");

        downloadLink.download = filename;

        downloadLink.href = window.URL.createObjectURL(csvFile);

        downloadLink.style.display = "none";

        document.body.appendChild(downloadLink);

        downloadLink.click();
      }

      function exportTableToCSV(filename) {
        var csv = [];
        var rows = document.querySelectorAll("table tr");

        for (var i = 0; i < rows.length; i++) {
          var row = [],
            cols = rows[i].querySelectorAll("td, th");

          for (var j = 0; j < cols.length; j++) row.push(cols[j].innerText);

          csv.push(row.join(","));
        }

        downloadCSV(csv.join("\n"), filename);
      }
    </script>

    <!-- jQuery -->
    <script src="/plugins/jQuery/jquery.min.js"></script>
    <script type="text/javascript" src="/datatables/datatables.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="/plugins/bootstrap/bootstrap.min.js"></script>

    <!-- Main Script -->
    <script src="/js/script.js"></script>

    <script>
      $(document).ready(function () {
        $("#leaderboard").DataTable();
      });
    </script>
  </body>
</html>
