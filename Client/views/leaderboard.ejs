<!DOCTYPE html>
<html lang="zxx">
  <head>
    <meta charset="utf-8" />
    <title id="demo1">Leaderboard</title>

    <!-- mobile responsive meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=1"
    />

    <!-- ** Plugins Needed for the Project ** -->
    <!-- Bootstrap -->
    <link rel="stylesheet" href="/plugins/bootstrap/bootstrap.min.css" />
    <!-- slick slider -->
    <link rel="stylesheet" href="/plugins/slick/slick.css" />
    <!-- themefy-icon -->
    <link rel="stylesheet" href="/plugins/themify-icons/themify-icons.css" />
    <link rel="icon" type="image/png" href="../../images/logo-backup2.png" />

    <!-- Main Stylesheet -->
    <link href="/css/style.css" rel="stylesheet" />
    <link href="/datatables/dataTables.min.css" rel="stylesheet" />

    <!--Favicon-->
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon" />
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon" />
    <style>
      /* Three columns side by side */
      .column {
        float: left;
        width: 33.3%;
        margin-bottom: 16px;
        padding: 0 8px;
      }

      /* Display the columns below each other instead of side by side on small screens */
      @media screen and (max-width: 650px) {
        .column {
          width: 100%;
          display: block;
        }
      }

      /* Add some shadows to create a card effect */
      .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
      }

      /* Some left and right padding inside the container */
      .container {
        padding: 0 16px;
      }

      /* Clear floats */
      .container::after,
      .row::after {
        content: "";
        clear: both;
        display: table;
      }

      .title {
        color: grey;
      }
    </style>
  </head>

  <body>
    <% include ../views/partials/header %>

    <!-- page title -->
    <section
      class="page-title bg-primary position-relative"
      style="height: 1vh"
    >
      <div class="container">
        <div class="row">
          <div class="col-12 text-center">
            <h2 class="text-white font-tertiary">Leaderboard</h2>
            <br />
          </div>
        </div>
      </div>
    </section>

    <section class="section">
      <div class="container">
        <!-- Toppers -->
        <div class="row">
          <div class="column">
            <div class="card d-flex justify-content-center align-items-center">
              <img
                src="<%= toppers[1].imgUrl %>"
                style="width: 157px; height: 210px"
              />
              <div class="container">
                <h2><%= toppers[1].username %></h2>
                <p class="title"><%= toppers[1].name %></p>
              </div>
            </div>
          </div>
          <div class="column">
            <div class="card d-flex justify-content-center align-items-center">
              <img
                src="<%= toppers[0].imgUrl %>"
                style="width: 157px; height: 210px"
              />
              <div class="container">
                <h2><%= toppers[0].username %></h2>
                <p class="title"><%= toppers[0].name %></p>
              </div>
            </div>
          </div>
          <div class="column">
            <div class="card d-flex justify-content-center align-items-center">
              <img
                src="<%= toppers[2].imgUrl %>"
                style="width: 157px; height: 210px"
              />
              <div class="container">
                <h2><%= toppers[2].username %></h2>
                <p class="title"><%= toppers[2].name %></p>
              </div>
            </div>
          </div>
        </div>
        <table
          id="leaderboard"
          class="table table-striped table-bordered"
          style="width: 100%"
        >
          <thead>
            <tr>
              <!-- headers -->
              <th>Rank</th>
              <th>Roll Number</th>
              <th>Name</th>
              <th>HackerRank</th>
              <th>CodeChef</th>
              <th>Codeforces</th>
              <th>InterviewBit</th>
              <th>SPOJ</th>
              <th>BuildIT</th>
              <th>Score</th>
              <th>Weekly Performance</th>
            </tr>
          </thead>
          <tbody>
            <% for (let i = 0; i < data.length; i++ ){ %>
            <tr>
              <% headers.forEach((col)=> { if (data[i][col]) { %>
              <td><%= data[i][col] %></td>
              <% } else { %>
              <td>0</td>
              <% } %> <% }) %>
            </tr>
            <% } %>
          </tbody>
          <tfoot>
            <tr>
              <!-- headers -->
              <th>Rank</th>
              <th>Roll Number</th>
              <th>Name</th>
              <th>HackerRank</th>
              <th>CodeChef</th>
              <th>Codeforces</th>
              <th>InterviewBit</th>
              <th>SPOJ</th>
              <th>BuildIT</th>
              <th>Score</th>
              <th>Weekly Performance</th>
            </tr>
          </tfoot>
        </table>
      </div>
    </section>

    <!-- jQuery -->
    <script src="/plugins/jQuery/jquery.min.js"></script>
    <script type="text/javascript" src="/datatables/datatables.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="/plugins/bootstrap/bootstrap.min.js"></script>
    <!-- slick slider -->
    <script src="/plugins/slick/slick.min.js"></script>
    <!-- filter -->
    <script src="/plugins/shuffle/shuffle.min.js"></script>

    <!-- Main Script -->
    <script src="/js/script.js"></script>

    <script>
      $(document).ready(function () {
        $("#leaderboard").DataTable();
      });
    </script>
  </body>
</html>
