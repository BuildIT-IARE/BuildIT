              bottom.style.borderColor = "rgba(36, 36, 36, 0.171)";
              topHead.style.borderColor = "rgba(36, 36, 36, 0.171)";
              left.style.borderColor = "rgba(36, 36, 36, 0.171)";
              th.forEach((item) => {
                item.style.borderColor = "rgba(36, 36, 36, 0.171)";
              });
              td.forEach((item) => {
